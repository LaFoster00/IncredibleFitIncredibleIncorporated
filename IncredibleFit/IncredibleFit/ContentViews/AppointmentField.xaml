<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IncredibleFit.ContentViews.AppointmentField"
             x:Name="view">

    <StackLayout>
        <Label Text="{Binding Source={x:Reference view}, Path=Type}" FontSize="Medium" FontAttributes="Bold" Margin="0,0,0,10"/>
        <Label Text="{Binding Source={x:Reference view}, Path=Name}" TextColor="{StaticResource Primary}" Margin="0,0,0,10"/>
        <Label Text="{Binding Source={x:Reference view}, Path=Description}"/>
    </StackLayout>
</ContentView>
