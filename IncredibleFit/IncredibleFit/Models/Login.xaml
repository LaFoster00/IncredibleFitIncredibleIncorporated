<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:behaviors="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="IncredibleFit.Login">

    <StackLayout Padding="20">

        <Label Text="Login" FontSize="30" TextColor="White" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>

        <Entry Text="{Binding UserName}" Placeholder="Username" Margin="0,10,0,0">
			<Entry.Triggers>
				<DataTrigger TargetType="Entry" Binding="{Binding IsBusy}" Value="True">
					<Setter Property="IsReadOnly" Value="True" />
				</DataTrigger>
				<DataTrigger TargetType="Entry" Binding="{Binding IsBusy}" Value="False">
					<Setter Property="IsReadOnly" Value="False" />
				</DataTrigger>
			</Entry.Triggers>
		</Entry>
		<Entry Text="{Binding Password}" Placeholder="Password" IsPassword="True" Margin="0,10,0,0">
			<Entry.Triggers>
				<DataTrigger TargetType="Entry" Binding="{Binding IsBusy}" Value="True">
					<Setter Property="IsReadOnly" Value="True" />
				</DataTrigger>
				<DataTrigger TargetType="Entry" Binding="{Binding IsBusy}" Value="False">
					<Setter Property="IsReadOnly" Value="False" />
				</DataTrigger>
			</Entry.Triggers>
		</Entry>

        <Button Text="Login" Command="{Binding LoginCommand}" BackgroundColor="#4CAF50" TextColor="White" Margin="0,20,0,0"/>

    </StackLayout>

</ContentPage>