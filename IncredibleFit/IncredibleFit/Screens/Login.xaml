<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:behaviors="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="IncredibleFit.Screens.Login">

    <StackLayout Padding="20">

        <Label Text="Login" FontSize="30" TextColor="White" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>

        <Entry Text="{Binding UserName}" Placeholder="Username" Margin="0,10,0,0" IsReadOnly="{Binding IsBusy}"/>
        <Entry Text="{Binding Password}" Placeholder="Password" IsPassword="True" Margin="0,10,0,0" IsReadOnly="{Binding IsBusy}"/>

        <Button Text="Login" Command="{Binding LoginCommand}" Margin="0,20,0,0"/>
        <Button Text="Sign Up" Command="{Binding SignUpCommand}" Margin="0,10,0,0"/>

    </StackLayout>

</ContentPage>