<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IncredibleFit.IncredibleFit.Screens.Profile"
             Title="Profile">

    <ScrollView>
        <StackLayout>
            <Border>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Label Text="Name:" Grid.Column="0" FontAttributes="Bold"/>
                    <Label x:Name="cardName"
                           Text=""
                           Grid.Column="1"/>
                    <ImageButton Grid.Column="2" 
                                 Source="icon_edit.png" 
                                 MaximumHeightRequest="20"
                                 Clicked="OnEditNameClicked"/>
                </Grid>
            </Border>
            <Border>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Label Text="Gewicht:" Grid.Column="0" FontAttributes="Bold"/>
                    <Label x:Name="cardWeight"
                           Text=""
                           Grid.Column="1"/>
                    <ImageButton Grid.Column="2" 
                                 Source="icon_edit.png" 
                                 MaximumHeightRequest="20"
                                 Clicked="OnEditNameClicked"/>
                </Grid>
            </Border>
            <Border>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Label Text="Größe:" Grid.Column="0" FontAttributes="Bold"/>
                    <Label x:Name="cardHeight"
                           Text=""
                           Grid.Column="1"/>
                    <ImageButton Grid.Column="2" 
                                 Source="icon_edit.png" 
                                 MaximumHeightRequest="20"
                                 Clicked="OnEditNameClicked"/>
                </Grid>
            </Border>
            <Border>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Label Text="Körperfettanteil:" Grid.Column="0" FontAttributes="Bold"/>
                    <Label x:Name="cardBodyFatPercentage"
                           Text=""
                           Grid.Column="1"/>
                    <ImageButton Grid.Column="2" 
                                 Source="icon_edit.png" 
                                 MaximumHeightRequest="20"
                                 Clicked="OnEditNameClicked"/>
                </Grid>
            </Border>
            <Border>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Label Text="Fitnesslevel:" Grid.Column="0" FontAttributes="Bold"/>
                    <Label x:Name="cardFitnesslevel"
                           Text=""
                           Grid.Column="1"/>
                    <ImageButton Grid.Column="2" 
                                 Source="icon_edit.png" 
                                 MaximumHeightRequest="20"
                                 Clicked="OnEditNameClicked"/>
                </Grid>
            </Border>
            <Border>
                <Grid RowSpacing="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Label Text="Ziel:" Grid.Column="0" FontAttributes="Bold"/>
                    <Label Text="Beschreibung:" Grid.Column="0" Grid.Row="1"/>
                    <Label x:Name="cardAimDescription"
                           Text=""
                           Grid.Column="1"
                           Grid.Row="1"/>
                    <Label Text="Gewichtsziel:" Grid.Column="0" Grid.Row="2"/>
                    <Label x:Name="cardAimWeight"
                           Text=""
                           Grid.Column="1"
                           Grid.Row="2"/>
                    <ImageButton Grid.Column="2" 
                                 Source="icon_edit.png" 
                                 MaximumHeightRequest="20"
                                 Clicked="OnEditNameClicked"/>
                </Grid>
            </Border>
        </StackLayout>
    </ScrollView>
</ContentPage>
