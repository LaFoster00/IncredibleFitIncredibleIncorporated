<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IncredibleFit.Screens.Profile"
             xmlns:viewModels ="clr-namespace:IncredibleFit.ViewModels"
             xmlns:contentViews = "clr-namespace:IncredibleFit.ContentViews"
             Title="Profile"
             x:DataType="viewModels:ProfileViewModel">

    <ScrollView>
        <StackLayout>
            <contentViews:EditableField Label = "First Name"
                                        Value = "{Binding FirstName}"/>
            <contentViews:EditableField Label = "Last Name"
                                        Value = "{Binding Name}"/>
            <contentViews:EditableField Label = "Password"
                                        Value = "{Binding Password}"/>
            <contentViews:EditableField Label = "Email"
                                        Value = "{Binding Email}"/>
            <contentViews:EditableField Label = "Weight"
                                        Value = "{Binding Weight}"
                                        Placeholder="0"/>
            <contentViews:EditableField Label = "Body Fat Percentage"
                                        Value = "{Binding BodyFatPercentage}"
                                        Placeholder="0"/>
            <contentViews:EditableField Label = "Basal Metabolic Rate"
                                        Value = "{Binding BasalMetabolicRate}"
                                        Placeholder="0"/>
            <Border>
                <Grid RowSpacing="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Label Text="{Binding FirstName}" FontAttributes="Bold" 
                           FontSize="Large" HorizontalOptions="Center"
                           Grid.ColumnSpan="2" TextColor="{StaticResource Primary}"/>
                    <Line HorizontalOptions="Fill" BackgroundColor="{StaticResource Primary}" 
                          Grid.Row="1" Grid.ColumnSpan="2"/>
                    <Image Source="icon_scale.png" HeightRequest="20" WidthRequest="20"
                           Grid.Row="2"/>
                    <Label x:Name="cardWeight" Grid.Row="2" Grid.Column="1"/>
                    <Image Source="icon_ruler.png" HeightRequest="20" WidthRequest="20"
                            Grid.Row="3"/>
                    <Label x:Name="cardHeight" Grid.Row="3" Grid.Column="1"/>
                    <Image Source="icon_percent.png" HeightRequest="20" WidthRequest="20"
                            Grid.Row="4"/>
                    <Label x:Name="cardBodyFatPercentage" Grid.Row="4" Grid.Column="1"/>
                    <Image Source="icon_biceps.png" HeightRequest="20" WidthRequest="20"
                            Grid.Row="5"/>
                    <Label x:Name="cardFitnesslevel" Grid.Row="5" Grid.Column="1"/>
                    <Image Source="icon_goal.png" HeightRequest="20" WidthRequest="20"
                            Grid.Row="6"/>
                    <Label x:Name="cardAimDescription" Grid.Row="6" Grid.Column="1"/>
                    <Label x:Name="cardAimWeight" Grid.Row="7" Grid.Column="1" Margin="0, -20, 0,0"/>
                    <Line HorizontalOptions="Fill" BackgroundColor="{StaticResource Primary}" 
                        Grid.Row="8" Grid.ColumnSpan="2"/>
                    <Button Text="Bearbeiten" Grid.Row="9" Grid.ColumnSpan="2"/>
                </Grid>
            </Border>
        </StackLayout>
    </ScrollView>
</ContentPage>
