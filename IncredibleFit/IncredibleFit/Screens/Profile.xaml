<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IncredibleFit.Screens.Profile"
             xmlns:viewModels ="clr-namespace:IncredibleFit.ViewModels"
             xmlns:contentViews = "clr-namespace:IncredibleFit.ContentViews"
             Title="Profile"
             x:DataType="viewModels:ProfileViewModel">

    <ScrollView>
        <StackLayout>
            <contentViews:EditableField Label = "First Name"
                                        Value = "{Binding FirstName}"/>
            <contentViews:EditableField Label = "Last Name"
                                        Value = "{Binding Name}"/>
            <contentViews:EditableField Label = "Password"
                                        Value = "{Binding Password}"/>
            <contentViews:EditableField Label = "Email"
                                        Value = "{Binding Email}"/>
            <contentViews:EditableField Label = "Weight"
                                        Value = "{Binding Weight}"
                                        Placeholder="0"/>
            <contentViews:EditableField Label = "Body Fat Percentage"
                                        Value = "{Binding BodyFatPercentage}"
                                        Placeholder="0"/>
            <contentViews:EditableField Label = "Basal Metabolic Rate"
                                        Value = "{Binding BasalMetabolicRate}"
                                        Placeholder="0"/>
            <Border>
                <Grid RowSpacing="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Label Text="Ziel:" Grid.Column="0" FontAttributes="Bold"/>
                    <Label Text="Beschreibung:" Grid.Column="0" Grid.Row="1"/>
                    <Label x:Name="cardAimDescription"
                           Text=""
                           Grid.Column="1"
                           Grid.Row="1"/>
                    <Label Text="Gewichtsziel:" Grid.Column="0" Grid.Row="2"/>
                    <Label x:Name="cardAimWeight"
                           Text=""
                           Grid.Column="1"
                           Grid.Row="2"/>
                    <ImageButton Grid.Column="2" 
                                 Source="icon_edit.png" 
                                 MaximumHeightRequest="20"/>
                </Grid>
            </Border>
        </StackLayout>
    </ScrollView>
</ContentPage>
