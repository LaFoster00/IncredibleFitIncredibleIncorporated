<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
            x:Class="IncredibleFit.PopUps.ExerciseDonePopOup"
            xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
            Color="Transparent">
    <VerticalStackLayout WidthRequest="300">
        <Border Stroke="{StaticResource Gray900}">
            <StackLayout>
                <Label
                    Text="Exercise done?"
                    FontAttributes="Bold"
                    FontSize="Medium"
                    Margin="0,0,0,10"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button Text="No" Clicked="BtnNoClicked" BackgroundColor="{StaticResource Gray400}"/>
                    <Button Text="Yes" Grid.Column="1" Clicked="BtnYesClicked"/>
                </Grid>
            </StackLayout>
        </Border>
    </VerticalStackLayout>
</toolkit:Popup>
