<toolkit:Popup
             x:Class="IncredibleFit.PopUps.DatePickerPopUp"
            xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
            Color="Transparent">
    <VerticalStackLayout WidthRequest="300">
        <Border Stroke="{StaticResource Gray900}">
            <StackLayout>
                <Label
                    Text="Select date for the appointment"
                    FontAttributes="Bold"
                    FontSize="Medium"/>
                <DatePicker x:Name="DatePicker" HorizontalOptions="CenterAndExpand" Margin="0,10,0,10"/>
                <Button Text="Save" Clicked="SaveEditClicked"/>
            </StackLayout>
        </Border>
    </VerticalStackLayout>
</toolkit:Popup>
