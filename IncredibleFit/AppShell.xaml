<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="IncredibleFit.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:screens="clr-namespace:IncredibleFit.IncredibleFit.Screens" 
    xmlns:local="clr-namespace:IncredibleFit"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Ernährung"
             Icon="icon_food.png">
            <ShellContent Title="Kalorientracker" ContentTemplate="{DataTemplate screens:CalorieTracker}" />
            <ShellContent Title="Ernährungsplan" ContentTemplate="{DataTemplate screens:DietPlan}" />
            <ShellContent Title="Rezepte finden" ContentTemplate="{DataTemplate screens:RecipeSearch}" />
        </Tab>
        <Tab Title="Training"
             Icon="icon_training.png">
            <ShellContent ContentTemplate="{DataTemplate screens:Training}" />
        </Tab>
        <Tab Title="Timeline"
             Icon="icon_timeline.png">
            <ShellContent x:Name="timelinePage"
                          ContentTemplate="{DataTemplate screens:Timeline}" />
        </Tab>
        <Tab Title="Profil"
             Icon="icon_profile.png">
            <ShellContent ContentTemplate="{DataTemplate screens:Profile}" />
        </Tab>
        <Tab Title="Einstellungen"
             Icon="icon_settings.png">
            <ShellContent ContentTemplate="{DataTemplate screens:Settings}" />
        </Tab>
    </TabBar>

</Shell>
